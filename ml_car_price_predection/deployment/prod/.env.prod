# Production Environment Variables
# WARNING: DO NOT commit this file with actual secrets!
# Use environment variable substitution or secrets management tool

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=car_price_prediction_prod

# Database Configuration (use secure password!)
DATABASE_URL=postgresql://ml_user_prod:${PROD_DB_PASSWORD}@postgres:5432/ml_evaluation
PROD_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Redis Configuration (use secure password!)
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
ENABLE_CACHE=true
CACHE_TTL=3600

# Model Configuration
MODEL_NAME=car_price_predictor
MODEL_PATH=/app/models/production/model.pkl

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=warning

# Security
JWT_SECRET=CHANGE_ME_JWT_SECRET
ENABLE_CORS=true
ALLOWED_ORIGINS=https://yourdomain.com
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# Environment
ENV=production
DEBUG=false

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
