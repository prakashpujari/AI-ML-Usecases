# UAT Environment Variables

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=car_price_prediction_uat

# Database Configuration
DATABASE_URL=postgresql://ml_user_uat:ml_password_uat@postgres:5432/ml_evaluation
UAT_DB_PASSWORD=ml_password_uat

# Redis Configuration
REDIS_URL=redis://:redis_uat_password@redis:6379/0
REDIS_PASSWORD=redis_uat_password
ENABLE_CACHE=true
CACHE_TTL=7200

# Model Configuration
MODEL_NAME=car_price_predictor_uat
MODEL_PATH=/app/models/production/model.pkl

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=warning

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Environment
ENV=uat
DEBUG=false

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
