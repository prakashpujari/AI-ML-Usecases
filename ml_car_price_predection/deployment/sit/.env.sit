# SIT Environment Variables

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=car_price_prediction_sit

# Database Configuration
DATABASE_URL=postgresql://ml_user:ml_password_sit@postgres:5432/ml_evaluation

# Redis Configuration
REDIS_URL=redis://redis:6379/0
ENABLE_CACHE=true
CACHE_TTL=3600

# Model Configuration
MODEL_NAME=car_price_predictor_sit
MODEL_PATH=/app/models/production/model.pkl

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
LOG_LEVEL=info

# Environment
ENV=sit
DEBUG=false

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=true

# Testing
RUN_INTEGRATION_TESTS=true
TEST_DATA_PATH=/app/data/testset/
